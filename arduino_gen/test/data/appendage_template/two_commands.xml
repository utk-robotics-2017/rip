<appendage-template>
    <commands>
        <command id="kExponent" name="XToTheN" index-num="true">
            <parameter type="int" name="x" />
            <parameter type="int" name="n" />
            <return-value type="int" name="rv" />
            <code>
                rv = 1;
                for (int i = 0; i < n; i++)
                    rv *= x;
            </code>
        </command>
        <command id="kDivide" name="Divide" index-num="true">
            <parameter type="int" name="a" />
            <parameter type="int" name="b" />
            <return-value type="int" name="quotient" />
            <return-value type="int" name="remainder" />
            <code>
                quotient = a / b;
                remainder = a % b;
            </code>
        </command>
    </commands>
